<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dekripsi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="30dp">

        <TextView
            android:id="@+id/dekripsi_cipher_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:text="Masukan Cipher Text"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/dekripsi_editText_cipher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="masukan cipher text"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/button_dekripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dekripsi"
            android:onClick="dekripsi_button"/>

        <TextView
            android:id="@+id/dekripsi_plain_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Plain Text"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/dekripsi_editText_plain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="hasil plain text"
            android:textAlignment="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>